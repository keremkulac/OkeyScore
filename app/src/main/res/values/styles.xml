<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="SingleGameTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="boxStrokeWidth">0.8dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_box_stroke_color</item>
        <item name="boxCornerRadiusBottomStart">16dp</item>
        <item name="boxCornerRadiusTopEnd">16dp</item>
        <item name="boxCornerRadiusTopStart">16dp</item>
        <item name="boxCornerRadiusBottomEnd">16dp</item>
        <item name="counterEnabled">true</item>
        <item name="counterMaxLength">20</item>
        <item name="errorEnabled">true</item>
    </style>

    <style name="SingleGameTextInputEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:inputType">numberSigned</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

    <style name="NameTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/player</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScoreTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/total_score</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="HeaderTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:background">@color/header_background_color</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NameTextInputLayoutStyle" parent="Widget.AppCompat.EditText" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLength">4</item>
    </style>

    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/settings_card_divider_color</color>

    <style name="ScoreTextInputEditTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:paddingBottom">-8dp</item>
    </style>

    <style name="ScoreTexEditTextStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLength">5</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/input_score_hint</item>
    </style>

    <style name="PenaltyTextViewStyle" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/penalty_text_color</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="DateTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/date</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawableLeft">@drawable/ic_calendar</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="DividerStyle" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="dividerThickness">0.1dp</item>
        <item name="dividerColor">@color/divider_color</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>

    </style>

    <style name="InfoTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/game_info</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableLeft">@drawable/ic_trophy</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TablayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>