<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AlertDialogStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/searchview_text_color</item>
        <item name="android:textColorHint">@color/searchview_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="colorAccent">@color/searchview_text_color</item>


    </style>



    <style name="Theme.MyApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/searchview_text_color</item>

        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>
    <style name="SingleGameTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/score_hint_text_color</item>
        <item name="android:textColorHint">@color/score_hint_text_color</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="boxStrokeWidth">1dp</item>
    </style>

    <style name="SingleGameTextInputEditTextStyle"  >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/score_text_color</item>
        <item name="android:textColorHint">@color/score_text_color</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">numberSigned</item>
    </style>

    <style name="SingleGameButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>


    <style name="NameTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/player</item>
        <item name="android:textColor">@color/name_text_color</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_margin">8dp</item>

    </style>


    <style name="ScoreTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/score</item>
        <item name="android:textColor">@color/score_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">8dp</item>

    </style>

    <style name="NameTextInputLayoutStyle" parent="Widget.AppCompat.EditText" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/score_text_color</item>
        <item name="android:textColorHint">@color/score_hint_text_color</item>
        <item name="android:hint">Oyuncu</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLength">4</item>
    </style>

    <style name="ScoreTextInputEditTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/score_text_color</item>
        <item name="android:textColorHint">@color/score_text_color</item>
        <item name="android:maxLength">21</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">40dp</item>
    </style>

    <style name="DateTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/date_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/date</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="TitleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">8dp</item>

    </style>

    <style name="InfoTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/game_info</item>
        <item name="android:textColor">@color/info_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/purple_200</item>
    </style>

</resources>