<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="LinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="AlertDialogStyle" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/main_background_color</item>
        <item name="android:textColor">@color/delete_color</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:color">@style/PositiveButtonStyle</item>

    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/alert_dialog_button_text_color</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/alert_dialog_button_text_color</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/searchview_text_color</item>
        <item name="android:textColorHint">@color/searchview_text_color</item>
        <item name="android:textSize">14sp</item>
        <item name="colorAccent">@color/searchview_text_color</item>
    </style>

    <style name="Theme.MyApp" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/searchview_text_color</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="SingleGameTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main_background_color</item>
        <item name="android:textColor">@color/text_input_layout_text_color</item>
        <item name="android:textColorHint">@color/text_input_layout_hint_color</item>
        <item name="android:backgroundTint">@color/main_background_color</item>
        <item name="android:padding">4dp</item>
        <item name="android:textStyle">bold</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>

    </style>

    <style name="SingleGameTextInputEditTextStyle"  >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/main_background_color</item>
        <item name="android:backgroundTint">@color/main_background_color</item>
        <item name="android:textColor">@color/score_text_color</item>
        <item name="android:textColorHint">@color/score_text_color</item>
        <item name="android:inputType">numberSigned</item>

    </style>

    <style name="ButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:visibility">gone</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>

        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:background">@drawable/custom_button</item>
    </style>

    <style name="NameTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/player</item>
        <item name="android:textColor">@color/name_text_color</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>

    </style>


    <style name="ScoreTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/total_score</item>
        <item name="android:textColor">@color/name_text_color</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">14sp</item>

    </style>
    <style name="HeaderTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/header_text_color</item>
        <item name="android:background">@color/header_background_color</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">13dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>


    </style>

    <style name="NameTextInputLayoutStyle" parent="Widget.AppCompat.EditText" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/score_hint_text_color</item>
        <item name="android:textColor">@color/score_hint_text_color</item>
        <item name="android:textColorPrimary">@color/score_hint_text_color</item>
        <item name="android:textColorPrimaryInverseDisableOnly">@color/score_hint_text_color</item>

        <item name="android:hint">Oyuncu</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:maxLength">4</item>
    </style>

    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">@color/score_hint_text_color</color>

    <style name="ScoreTextInputEditTextStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/score_text_color</item>
        <item name="android:maxLength">4</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">25dp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="PlayerImageViewStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_player</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:contentDescription">@string/todo</item>

    </style>

    <style name="TeamImageViewStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_partner</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:contentDescription">@string/todo</item>

    </style>


    <style name="DateTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/date_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/date</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:drawableLeft">@drawable/ic_calendar</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="TitleTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/title_text_color</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">16dp</item>
    </style>

    <style name="DividerStyle" parent="Widget.MaterialComponents.MaterialDivider">
        <item name="android:background">@color/separator_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="dividerThickness">0.1dp</item>
        <item name="dividerColor">@color/divider_color</item>

    </style>

    <style name="InfoTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/game_info</item>
        <item name="android:textColor">@color/info_text_color</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawableLeft">@drawable/ic_trophy</item>
    </style>

    <style name="HintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/purple_200</item>
    </style>

</resources>