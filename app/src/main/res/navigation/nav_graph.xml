<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/finishedGameFragment">

    <fragment
        android:id="@+id/saveGameFragment"
        android:name="com.keremkulac.okeyscore.ui.saveGame.SaveGameFragment"
        android:label="fragment_save_game"
        tools:layout="@layout/fragment_save_game" >

        <action
            android:id="@+id/action_saveGameFragment_to_finishedGameFragment"
            app:destination="@id/finishedGameFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            />
    </fragment>
    <fragment
        android:id="@+id/finishedGameFragment"
        android:name="com.keremkulac.okeyscore.ui.finishedGame.FinishedGameFragment"
        android:label="fragment_finished_game"
        tools:layout="@layout/fragment_finished_game" >
        <action
            android:id="@+id/action_finishedGameFragment_to_saveGameFragment"
            app:destination="@id/saveGameFragment" />
        <action
            android:id="@+id/action_finishedGameFragment_to_finishedGameDetailFragment"
            app:destination="@id/finishedGameDetailFragment" >
            <argument
                android:name="finishedGameID"
                app:argType="integer" />
        </action>

    </fragment>
    <fragment
        android:id="@+id/finishedGameDetailFragment"
        android:name="com.keremkulac.okeyscore.ui.finishedGameDetail.FinishedGameDetailFragment"
        android:label="fragment_finished_game_detail"
        tools:layout="@layout/fragment_finished_game_detail" >
        <action
            android:id="@+id/action_finishedGameDetailFragment_to_finishedGameFragment"
            app:destination="@id/finishedGameFragment" />
    </fragment>
</navigation>