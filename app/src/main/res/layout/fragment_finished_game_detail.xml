                            android:layout_height="match_parent"
                            android:background="@drawable/vertical_line" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/team2Score10"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />

                </LinearLayout>

                <LinearLayout style="@style/LinearLayoutStyle">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/round_11" />

                    <EditText
                        android:id="@+id/team1Score11"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />
                    <LinearLayout
                        style="@style/VerticalLinearLayoutSeperatorStyle">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/vertical_line" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/team2Score11"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />

                </LinearLayout>

                <LinearLayout
                    style="@style/LinearLayoutStyle"
                    android:layout_marginTop="10dp">


                    <TextView
                        style="@style/TextViewStyle"
                        android:layout_weight="2"
                        android:text="@string/total_scores"
                        android:textSize="12sp" />

                    <EditText
                        android:id="@+id/team1TotalScore"
                        style="@style/EditTextStyle"
                        android:autofillHints=""
                        android:hint="@string/total_0"
                        android:maxLength="10" />
                    <LinearLayout
                        style="@style/VerticalLinearLayoutSeperatorStyle">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/vertical_line" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/team2TotalScore"
                        style="@style/EditTextStyle"
                        android:autofillHints=""
                        android:hint="@string/total_0"
                        android:maxLength="10" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>