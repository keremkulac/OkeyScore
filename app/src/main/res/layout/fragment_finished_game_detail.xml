                        style="@style/VerticalLinearLayoutSeperatorStyle">
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/vertical_line" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/team2Score4"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />

                </LinearLayout>

                <LinearLayout style="@style/LinearLayoutStyle">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/round_5" />

                    <EditText
                        android:id="@+id/team1Score5"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />
                    <LinearLayout
                        style="@style/VerticalLinearLayoutSeperatorStyle">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/vertical_line" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/team2Score5"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />

                </LinearLayout>

                <LinearLayout style="@style/LinearLayoutStyle">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/round_6" />

                    <EditText
                        android:id="@+id/team1Score6"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />
                    <LinearLayout
                        style="@style/VerticalLinearLayoutSeperatorStyle">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/vertical_line" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/team2Score6"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />

                </LinearLayout>

                <LinearLayout style="@style/LinearLayoutStyle">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/round_7" />

                    <EditText
                        android:id="@+id/team1Score7"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />
                    <LinearLayout
                        style="@style/VerticalLinearLayoutSeperatorStyle">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/vertical_line" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/team2Score7"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />

                </LinearLayout>

                <LinearLayout style="@style/LinearLayoutStyle">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/round_8" />

                    <EditText
                        android:id="@+id/team1Score8"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />
                    <LinearLayout
                        style="@style/VerticalLinearLayoutSeperatorStyle">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/vertical_line" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/team2Score8"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />

                </LinearLayout>

                <LinearLayout style="@style/LinearLayoutStyle">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/round_9" />

                    <EditText
                        android:id="@+id/team1Score9"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />
                    <LinearLayout
                        style="@style/VerticalLinearLayoutSeperatorStyle">

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@drawable/vertical_line" />
                    </LinearLayout>

                    <EditText
                        android:id="@+id/team2Score9"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />

                </LinearLayout>

                <LinearLayout style="@style/LinearLayoutStyle">

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/round_10" />

                    <EditText
                        android:id="@+id/team1Score10"
                        style="@style/EditTextStyle"
                        android:autofillHints="" />
