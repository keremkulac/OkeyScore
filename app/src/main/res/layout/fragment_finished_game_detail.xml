<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.finishedGameDetail.FinishedGameDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/goToFinishedGameFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/tag"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/goToFinishedGameFragment"
                android:text="Oyun detay"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/linearLayout"
        style="@style/LinearLayoutStyle"
        android:paddingStart="10dp"
        android:paddingTop="20dp"
        android:paddingEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar">

        <TextView
            style="@style/TextViewStyle"
            />

        <EditText
            android:hint="@string/team1Name"
            android:id="@+id/team1Name"
            style="@style/EditTextStyle"
            android:autofillHints="" />

        <EditText
            android:hint="@string/team2Name"
            android:id="@+id/team2Name"
            style="@style/EditTextStyle"
            android:layout_marginStart="10dp"
            android:autofillHints="" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/scoreContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

        <TextView
            android:id="@+id/roundLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="8dp"
            android:text="@string/round_scores"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <LinearLayout style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_1" />

            <EditText
                android:id="@+id/team1Score1"
                style="@style/EditTextStyle"
                android:autofillHints="" />

            <EditText

                android:id="@+id/team2Score1"
                style="@style/EditTextStyle"
                android:layout_marginStart="10dp"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_2" />

            <EditText
                android:id="@+id/team1Score2"
                style="@style/EditTextStyle"
                android:autofillHints="" />

            <EditText
                android:id="@+id/team2Score2"
                style="@style/EditTextStyle"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_3" />

            <EditText
                android:id="@+id/team1Score3"
                style="@style/EditTextStyle"
                android:autofillHints="" />

            <EditText
                android:id="@+id/team2Score3"
                style="@style/EditTextStyle"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_4" />

            <EditText
                android:id="@+id/team1Score4"
                style="@style/EditTextStyle"
                android:autofillHints="" />

            <EditText
                android:id="@+id/team2Score4"
                style="@style/EditTextStyle"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_5" />

            <EditText
                android:id="@+id/team1Score5"
                style="@style/EditTextStyle"
                android:autofillHints="" />

            <EditText
                android:id="@+id/team2Score5"
                style="@style/EditTextStyle"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_6" />

            <EditText
                android:id="@+id/team1Score6"
                style="@style/EditTextStyle"
                android:autofillHints="" />

            <EditText
                android:id="@+id/team2Score6"
                style="@style/EditTextStyle"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_7" />

            <EditText
                android:id="@+id/team1Score7"
                style="@style/EditTextStyle"
                android:autofillHints="" />

            <EditText
                android:id="@+id/team2Score7"
                style="@style/EditTextStyle"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_8" />

            <EditText
                android:id="@+id/team1Score8"
                style="@style/EditTextStyle"
                android:autofillHints="" />

            <EditText
                android:id="@+id/team2Score8"
                style="@style/EditTextStyle"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_9" />

            <EditText
                android:id="@+id/team1Score9"
                style="@style/EditTextStyle"
                android:autofillHints="" />

            <EditText
                android:id="@+id/team2Score9"
                style="@style/EditTextStyle"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_10" />

            <EditText
                android:id="@+id/team1Score10"
                style="@style/EditTextStyle"
                android:autofillHints="" />

            <EditText
                android:id="@+id/team2Score10"
                style="@style/EditTextStyle"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_11" />

            <EditText
                android:id="@+id/team1Score11"
                style="@style/EditTextStyle"
                android:autofillHints="" />

            <EditText
                android:id="@+id/team2Score11"
                style="@style/EditTextStyle"
                android:autofillHints="" />
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle"
            android:layout_marginTop="20dp">

            <TextView
                style="@style/TextViewStyle"
                android:layout_weight="2"
                android:text="@string/total_scores"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/team1TotalScore"
                style="@style/EditTextStyle"
                android:layout_weight="3"
                android:autofillHints=""
                android:hint="@string/total_0"
                android:maxLength="14"
                android:textSize="12sp" />

            <EditText
                android:id="@+id/team2TotalScore"
                style="@style/EditTextStyle"
                android:layout_weight="3"
                android:autofillHints=""
                android:hint="@string/total_0"
                android:maxLength="14"
                android:textSize="12sp" />
        </LinearLayout>

    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>