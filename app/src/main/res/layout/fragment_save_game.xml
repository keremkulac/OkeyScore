<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_700">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/goToSaveFragment"
                android:src="@drawable/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/tag"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:text="@string/toolbar_save_game"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/goToSaveFragment"/>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_below="@+id/toolBar"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:id="@+id/teamNamesLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:background="@null"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@id/team1Name"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginStart="60dp"
            android:inputType="text"
            android:hint="@string/team_name"
            android:autofillHints="" />
        <EditText
            android:background="@null"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@id/team2Name"
            android:layout_weight="2"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:layout_marginStart="20dp"
            android:inputType="text"
            android:hint="@string/team_name"
            android:autofillHints="" />

    </LinearLayout>

    <LinearLayout
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_below="@+id/teamNamesLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/team1View"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginStart="60dp"
            android:layout_marginEnd="10dp" />
        <View
            android:id="@+id/team2View"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="5dp"
            android:layout_gravity="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="20dp"
           />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/scoreContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/teamNamesLayout"
        android:layout_marginTop="10dp"
        android:paddingTop="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/roundLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/round_scores"
            android:textSize="18sp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_1"/>

            <EditText
                android:id="@+id/team1Score1"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:layout_marginStart="10dp"
                android:id="@+id/team2Score1"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_2"/>

            <EditText
                android:id="@+id/team1Score2"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score2"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_3"/>

            <EditText
                android:id="@+id/team1Score3"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score3"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_4"/>

            <EditText
                android:id="@+id/team1Score4"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score4"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_5"/>

            <EditText
                android:id="@+id/team1Score5"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score5"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_6"/>

            <EditText
                android:id="@+id/team1Score6"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score6"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>
        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_7"/>

            <EditText
                android:id="@+id/team1Score7"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score7"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_8"/>

            <EditText
                android:id="@+id/team1Score8"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score8"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_9"/>

            <EditText
                android:id="@+id/team1Score9"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score9"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_10"/>

            <EditText
                android:id="@+id/team1Score10"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score10"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_11"/>

            <EditText
                android:id="@+id/team1Score11"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score11"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            style="@style/LinearLayoutStyle">

            <TextView
                android:layout_weight="2"
                android:textSize="12sp"
                style="@style/TextViewStyle"
                android:text="@string/total_scores"/>

            <EditText
                android:id="@+id/team1TotalScore"
                style="@style/EditTextStyle"
                android:hint="@string/total_0"
                android:textSize="12sp"
                android:layout_weight="3"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2TotalScore"
                style="@style/EditTextStyle"
                android:hint="@string/total_0"
                android:textSize="12sp"
                android:layout_weight="3"
                android:autofillHints=""/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:background="@drawable/custom_button"
        android:id="@+id/saveGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_below="@id/scoreContainer"
        android:layout_alignParentEnd="true"
        android:text="@string/save_game" />
</RelativeLayout>
