                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_11"/>

            <EditText
                android:id="@+id/team1Score11"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score11"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            style="@style/LinearLayoutStyle">

            <TextView
                android:layout_weight="2"
                android:textSize="12sp"
                style="@style/TextViewStyle"
                android:text="@string/total_scores"/>

            <EditText
                android:id="@+id/team1TotalScore"
                style="@style/EditTextStyle"
                android:hint="@string/total_0"
                android:textSize="12sp"
                android:maxLength="14"
                android:layout_weight="3"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2TotalScore"
                style="@style/EditTextStyle"
                android:hint="@string/total_0"
                android:textSize="12sp"
                android:maxLength="14"
                android:layout_weight="3"
                android:autofillHints=""/>
        </LinearLayout>

            <Button
                android:layout_marginStart="60dp"
                android:background="@drawable/custom_button"
                android:id="@+id/saveGame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/save_game" />

    </LinearLayout>


</RelativeLayout>
