<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context=".ui.SaveGameFragment">

    <TableLayout
        android:layout_margin="10dp"
        android:padding="5dp"
        android:id="@+id/tableLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout android:orientation="horizontal"
            tools:ignore="UselessParent">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout android:orientation="vertical">

                    <TextView
                        android:layout_marginTop="5dp"
                        style="@style/TextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/_1" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/_2" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/_3" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/_4" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/_5" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/_6" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/_7" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/_8" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/_9" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/_10" />

                    <TextView
                        style="@style/TextViewStyle"
                        android:text="@string/_11" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/redTeam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/redTeamName"
                        style="@style/EditTextInputStyle"
                        android:hint="@string/team_name"
                        android:inputType="text" />

                    <EditText
                        android:id="@+id/redTeamScore1"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/redTeamScore2"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/redTeamScore3"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/redTeamScore4"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/redTeamScore5"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/redTeamScore6"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/redTeamScore7"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/redTeamScore8"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/redTeamScore9"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/redTeamScore10"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/redTeamScore11"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/redTeamTotalScore"
                        style="@style/EditTextInputStyle" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/blueTeam"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/blueTeamName"
                        style="@style/EditTextInputStyle"
                        android:hint="@string/team_name"
                        android:inputType="text" />

                    <EditText
                        android:id="@+id/blueTeamScore1"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/blueTeamScore2"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/blueTeamScore3"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/blueTeamScore4"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/blueTeamScore5"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/blueTeamScore6"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/blueTeamScore7"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/blueTeamScore8"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/blueTeamScore9"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/blueTeamScore10"
                        style="@style/EditTextInputStyle" />

                    <EditText
                        android:id="@+id/blueTeamScore11"
                        style="@style/EditTextInputStyle" />
                    <EditText
                        android:id="@+id/blueTeamTotalScore"
                        style="@style/EditTextInputStyle" />

                </LinearLayout>
            </TableRow>

        </LinearLayout>

    </TableLayout>


    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/save_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>