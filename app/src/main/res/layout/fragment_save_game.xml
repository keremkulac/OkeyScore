        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_5"/>

            <EditText
                android:id="@+id/team1Score5"
                style="@style/EditTextStyle"
                android:autofillHints=""/>

            <EditText
                android:id="@+id/team2Score5"
                style="@style/EditTextStyle"
                android:autofillHints=""/>
        </LinearLayout>

        <LinearLayout
            style="@style/LinearLayoutStyle">

            <TextView
                style="@style/TextViewStyle"
                android:text="@string/round_6"/>

            <EditText
                android:id="@+id/team1Score6"
                style="@style/EditTextStyle"
