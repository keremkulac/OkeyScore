<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/main_background_color"
    android:id="@+id/partnerGameItemBackground">

    <com.google.android.material.textfield.TextInputLayout
        style="@style/NameTextInputLayoutStyle"
        app:boxStrokeWidth="0dp"
        android:id="@+id/team1ScoreHint">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/team1Score"
            style="@style/ScoreTextInputEditTextStyle" />
    </com.google.android.material.textfield.TextInputLayout>

    <include
        android:id="@+id/vertical_separator"
        layout="@layout/vertical_separator" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/NameTextInputLayoutStyle"
        app:boxStrokeWidth="0dp"
        android:id="@+id/team2ScoreHint">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/team2Score"
            style="@style/ScoreTextInputEditTextStyle" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>