<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="10dp"
    app:cardCornerRadius="20dp"
    app:cardBackgroundColor="@color/white"
    android:layout_margin="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp">


        <ImageView
            android:id="@+id/winnerTextViewImageView1"
            style="@style/TeamImageViewStyle"
            android:contentDescription="@string/todo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/team1Name"
            style="@style/NameTextViewStyle"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/winnerTextViewImageView1"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/team1TotalScore"
            style="@style/ScoreTextViewStyle"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/winnerTextViewImageView1"
            app:layout_constraintTop_toBottomOf="@+id/team1Name" />

        <View
            android:id="@+id/partnerColumnSeparator"
            style="@style/VerticalSeparatorStyle"
            app:layout_constraintBottom_toTopOf="@+id/partnerAndDetailRowSeparator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/winnerTextViewImageView2"
            style="@style/TeamImageViewStyle"
            android:paddingStart="6dp"
            android:contentDescription="@string/todo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/team2Name"
            style="@style/NameTextViewStyle"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/winnerTextViewImageView2"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/team2TotalScore"
            style="@style/ScoreTextViewStyle"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@+id/winnerTextViewImageView2"
            app:layout_constraintTop_toBottomOf="@+id/team2Name" />


        <View
            android:id="@+id/partnerAndDetailRowSeparator"
            style="@style/HorizontalSeparatorStyle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partnerColumnSeparator" />

        <TextView
            android:id="@+id/gameInfo"
            style="@style/InfoTextViewStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/partnerAndDetailRowSeparator" />

        <TextView
            android:id="@+id/gameDate"
            style="@style/DateTextViewStyle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gameInfo" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
