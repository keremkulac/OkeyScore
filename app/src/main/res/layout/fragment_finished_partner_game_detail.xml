<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="parent"
    android:background="@color/main_background_color"
    tools:context=".ui.finishedPartnerGameDetail.FinishedPartnerGameDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@color/main_background_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/purple_700"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/goToFinishedGameViewFragment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/tag"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="10dp"
                    android:layout_toEndOf="@+id/goToFinishedGameViewFragment"
                    android:text="@string/game_detail"
                    android:textColor="@color/button_text_color"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/teamNames"
            style="@style/TitleTextViewStyle"
            android:text="@string/teams"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolBar" />

        <ImageView
            android:id="@+id/imageView"
            style="@style/TeamImageViewStyle"
            android:layout_marginStart="16dp"
            android:contentDescription="@string/todo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teamNames" />

        <TextView
            android:id="@+id/team1Name"
            style="@style/NameTextViewStyle"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/teamNames" />

        <TextView
            android:id="@+id/team1TotalScore"
            style="@style/ScoreTextViewStyle"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/team1Name" />

        <View
            android:id="@+id/partnerColumnSeparator"
            style="@style/VerticalSeparatorStyle"
            app:layout_constraintBottom_toTopOf="@+id/partnerAndRecyclerViewRowSeparator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teamNames" />

        <ImageView
            android:id="@+id/imageView2"
            style="@style/TeamImageViewStyle"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/todo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/teamNames" />

        <TextView
            android:id="@+id/team2Name"
            style="@style/NameTextViewStyle"
            android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/teamNames" />

        <TextView
            android:id="@+id/team2TotalScore"
            style="@style/ScoreTextViewStyle"
            android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toBottomOf="@+id/team2Name" />

        <View
            android:id="@+id/partnerAndRecyclerViewRowSeparator"
            style="@style/HorizontalSeparatorStyle"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partnerColumnSeparator" />

        <TextView
            android:id="@+id/roundLabel"
            style="@style/TitleTextViewStyle"
            android:text="@string/round_scores"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/partnerAndRecyclerViewRowSeparator" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/roundRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roundLabel" />

        <TextView
            android:id="@+id/detailLabel"
            style="@style/TitleTextViewStyle"
            android:text="@string/detail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roundRecyclerView" />

        <TextView
            android:id="@+id/gameDetail"
            style="@style/InfoTextViewStyle"
            android:layout_margin="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/detailLabel" />

        <TextView
            android:id="@+id/gameDate"
            style="@style/DateTextViewStyle"
            android:layout_margin="16dp"
            app:drawableLeftCompat="@drawable/ic_calendar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/gameDetail" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
