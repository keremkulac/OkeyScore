<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.finishedSingleGame.FinishedSingleGameFragment">

    <LinearLayout
        android:id="@+id/nameEntryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <EditText
            android:id="@+id/player1Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:hint="@string/enter_player1_name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/player2Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:hint="@string/enter_player2_name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:importantForAutofill="no" />


        <EditText
            android:id="@+id/player3Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:hint="@string/enter_player3_name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:importantForAutofill="no" />

        <EditText
            android:id="@+id/player4Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:backgroundTint="@color/white"
            android:hint="@string/enter_player4_name"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:inputType="text"
            android:importantForAutofill="no" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/namesLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/confirmNames">

        <include
            android:id="@+id/names"
            layout="@layout/single_game_round_item" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/totalScoresLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/namesLayout">
        <include
            android:id="@+id/totalScores"
            layout="@layout/single_game_round_item" />
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/scoreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/totalScoresLayout">
    </LinearLayout>

    <Button
        android:id="@+id/confirmNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/custom_button"
        android:text="@string/save_names"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEntryLayout" />

    <Button
        android:id="@+id/newRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/custom_button"
        android:text="@string/new_round"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreLayout" />

    <Button
        android:visibility="gone"
        android:id="@+id/saveGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/custom_button"
        android:text="@string/save"
        app:layout_constraintEnd_toStartOf="@+id/newRound"
        app:layout_constraintTop_toBottomOf="@+id/scoreLayout" />
</androidx.constraintlayout.widget.ConstraintLayout>