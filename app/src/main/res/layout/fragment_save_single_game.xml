<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.finishedSingleGame.FinishedSingleGameFragment">

    <LinearLayout
        android:id="@+id/nameEntryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/player1NameEntry"
            style="@style/SingleGameEditTextStyle2"
            android:hint="@string/enter_player1_name"/>

        <EditText
            android:id="@+id/player2NameEntry"
            style="@style/SingleGameEditTextStyle2"
            android:hint="@string/enter_player2_name"/>

        <EditText
            android:id="@+id/player3NameEntry"
            style="@style/SingleGameEditTextStyle2"
            android:hint="@string/enter_player3_name"/>

        <EditText
            android:id="@+id/player4NameEntry"
            style="@style/SingleGameEditTextStyle2"
            android:hint="@string/enter_player4_name"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/playerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/confirmNames">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/player1Name"
                style="@style/SingleGameNameTextViewStyle"/>

            <TextView
                android:id="@+id/player1TotalScore"
                style="@style/SingleGameTotalScoreTextViewStyle" />

        </LinearLayout>

        <TextView
            style="@style/SingleGameVerticalSeperatorTextViewStyle"/>

        <LinearLayout
            style="@style/SingleGameLayoutStyle">

            <TextView
                android:id="@+id/player2Name"
                style="@style/SingleGameNameTextViewStyle"/>

            <TextView
                android:id="@+id/player2TotalScore"
                style="@style/SingleGameTotalScoreTextViewStyle" />
        </LinearLayout>

        <TextView
            style="@style/SingleGameVerticalSeperatorTextViewStyle"/>

        <LinearLayout
            style="@style/SingleGameLayoutStyle">

            <TextView
                android:id="@+id/player3Name"
                style="@style/SingleGameNameTextViewStyle"/>

            <TextView
                android:id="@+id/player3TotalScore"
                style="@style/SingleGameTotalScoreTextViewStyle" />
        </LinearLayout>

        <TextView
            style="@style/SingleGameVerticalSeperatorTextViewStyle"/>

        <LinearLayout
            style="@style/SingleGameLayoutStyle">

            <TextView
                android:id="@+id/player4Name"
                style="@style/SingleGameNameTextViewStyle"/>

            <TextView
                android:id="@+id/player4TotalScore"
                style="@style/SingleGameTotalScoreTextViewStyle" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/seperator"
        android:visibility="gone"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerLayout"/>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/scoreLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/seperator">
    </LinearLayout>

    <Button
        android:id="@+id/confirmNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/custom_button"
        android:text="@string/save_names"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/nameEntryLayout" />

    <Button
        android:id="@+id/newRound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:background="@drawable/custom_button"
        android:text="@string/new_round"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreLayout" />

    <Button
        android:visibility="gone"
        android:id="@+id/saveGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="6dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/custom_button"
        android:text="@string/save"
        app:layout_constraintEnd_toStartOf="@+id/newRound"
        app:layout_constraintTop_toBottomOf="@+id/scoreLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>