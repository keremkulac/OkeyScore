<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.finishedPartnerGameDetail.FinishedPartnerGameDetailFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/purple_700"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/goToFinishedGameViewFragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/tag"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/goToFinishedGameViewFragment"
                android:text="@string/game_detail"
                android:textColor="@color/button_text_color"
                android:textSize="16sp"
                android:textStyle="bold" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolBar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout"
            android:orientation="vertical">

            <LinearLayout
                android:layout_margin="16dp"
                style="@style/LinearLayoutStyle"
                android:orientation="vertical"
                android:background="@drawable/custom_layout_border">

                <TextView
                    android:id="@+id/teamNames"
                    android:text="@string/teamNames"
                    style="@style/TitleTextViewStyle"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/NameTextInputLayoutStyle"
                        android:id="@+id/player1Name"
                        app:hintTextAppearance="@style/HintTextAppearance"
                        app:boxStrokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/player1TotalScore"
                            style="@style/ScoreTextInputEditTextStyle" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <include layout="@layout/vertical_seperator" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/NameTextInputLayoutStyle"
                        android:id="@+id/player2Name"
                        app:hintTextAppearance="@style/HintTextAppearance"
                        app:boxStrokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/player2TotalScore"
                            style="@style/ScoreTextInputEditTextStyle" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <include layout="@layout/vertical_seperator" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/NameTextInputLayoutStyle"
                        android:id="@+id/player3Name"
                        app:hintTextAppearance="@style/HintTextAppearance"
                        app:boxStrokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/player3TotalScore"
                            style="@style/ScoreTextInputEditTextStyle" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <include layout="@layout/vertical_seperator" />

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/NameTextInputLayoutStyle"
                        android:id="@+id/player4Name"
                        app:hintTextAppearance="@style/HintTextAppearance"
                        app:boxStrokeWidth="0dp">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/player4TotalScore"
                            style="@style/ScoreTextInputEditTextStyle" />
                    </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
            </LinearLayout>

            <include layout="@layout/horizontal_seperator" />

            <LinearLayout
                android:background="@drawable/custom_layout_border"
                android:id="@+id/scoreContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <LinearLayout
                    android:orientation="vertical"
                    style="@style/LinearLayoutStyle">
                    <TextView
                        android:id="@+id/roundLabel"
                        android:text="@string/round_scores"
                        style="@style/TitleTextViewStyle" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_marginTop="8dp"
                        android:id="@+id/roundRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/horizontal_seperator" />

            <LinearLayout
                android:background="@drawable/custom_layout_border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="16dp">

                <TextView
                    android:text="@string/detail"
                    style="@style/TitleTextViewStyle"/>

                <TextView
                    android:id="@+id/gameDetail"
                    android:text="@string/detail"
                    style="@style/InfoTextViewStyle"/>
                <TextView

                    android:id="@+id/gameDate"
                    android:text="@string/date"
                    style="@style/DateTextViewStyle"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>